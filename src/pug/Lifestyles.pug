doctype
html
    - var title = 'Lifestyle';
    title=title + " – Newspaper"
    include includes/head
body
    // Importing Header
    include includes/header

    // Start Lifestyle page content
    .body-bg-color-g
        section.main
            .container
                // breadcrumb
                nav(aria-label="breadcrumb" class="breadcrump-sect")
                    h1.breadcrumb-header Lifestyle
                    ol.breadcrumb
                        li.breadcrumb-item 
                            a(href="#") home
                        li(aria-current="page").breadcrumb-item
                            a(href="#") Blogs 
                        li(aria-current="page").breadcrumb-item.active
                            a(href="#") Lifestyle 
                .row
                    .col-lg-9.col-md-12
                        .blogs-container                           
