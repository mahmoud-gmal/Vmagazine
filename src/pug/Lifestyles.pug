                                            button.read-more READ MORE
                                nav(aria-label="Page navigation example" class="pagination-sect")
                                ul.pagination

                                    li.page-item.active 
                                        a(class="page-link" href="#") 1
                                    li.page-item  
                                        a(class="page-link" href="#") 2
                                    li.page-item  
                                        a ...
                                    li.page-item  
                                        a(class="page-link angle-right" href="#") next

                    .col-lg-3.col-md-12
                        // sidebar
                        include includes/sidebar

    // End Lifestyle page content


    // Footer 
    include includes/footer