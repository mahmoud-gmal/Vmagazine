                                        a(href="#")
                                            img(src="img/blogs/blog-post-img-" + index + '.jpg')
                                        .post-desc
                                            .article-info
                                                span.clock april 5,2018
                                                span.comments 0
                                            a(href="#")
                                                h3.article-title=val
                                            p.article-content
